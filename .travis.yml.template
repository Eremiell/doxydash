language: cpp
os: osx
osx_image: xcode9.2
branches:
  only:
  - Crypto++

before_install:
  - brew update && brew bundle

install:
  - git clone https://github.com/weidai11/cryptopp.git
  - cd cryptopp
  - git checkout ${VERSION}

before_script:
  - cat ../Doxyfile.patch >> Doxyfile

script:
  - doxygen
  - cd html-docs
  - make

before_deploy:
  - wget https://www.cryptopp.com/w/images/Logo-Steel.png
  - convert Logo-Steel.png -resize 16x16! Crypto++.docset/icon.png
  - convert Logo-Steel.png -resize 32x32! Crypto++.docset/icon@2x.png
  - sed -i "" 's@<string>doxygen</string>@<string>cryptopp</string>@' Crypto++.docset/Contents/Info.plist
  - tar --exclude='.DS_Store' -cvzf Crypto++.tgz Crypto++.docset
  - cd ../..

deploy:
  provider: releases
  api_key:
    secure: 
  file:
    - "cryptopp/html-docs/Crypto++.tgz"
    - "cryptopp/html-docs/Crypto++.docset/icon.png"
    - "cryptopp/html-docs/Crypto++.docset/icon@2x.png"
    - "docset.json"
    - "README.md"
    - "Crypto++.xml"
  skip_cleanup: true
  on:
    repo: Eremiell/doxydash
    branch: Crypto++
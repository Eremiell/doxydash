language: cpp
os: osx
osx_image: xcode9.2
branches:
  only:
  - Botan

before_install:
  - brew update && brew bundle

install:
  - git clone https://github.com/randombit/botan.git
  - cd botan
  - git checkout ${VERSION}

before_script:
  - ./configure.py --with-doxygen
  - cat ../Doxyfile.patch >> build/botan.doxy

script:
  - make docs
  - cd build/docs/doxygen
  - make

before_deploy:
  - wget https://imgur.com/download/PA2eIGQ -O icon.png
  - convert icon.png -resize 16x16! Botan.docset/icon.png
  - convert icon.png -resize 32x32! Botan.docset/icon@2x.png
  - sed -i "" 's@<string>doxygen</string>@<string>botan</string>@' Botan.docset/Contents/Info.plist
  - tar --exclude='.DS_Store' -cvzf Botan.tgz Botan.docset
  - cd ../../../..

deploy:
  provider: releases
  api_key:
    secure: 
  file:
    - "botan/build/docs/doxygen/Botan.tgz"
    - "botan/build/docs/doxygen/Botan.docset/icon.png"
    - "botan/build/docs/doxygen/Botan.docset/icon@2x.png"
    - "docset.json"
    - "README.md"
    - "Botan.xml"
  skip_cleanup: true
  on:
    repo: Eremiell/doxydash
    branch: Botan
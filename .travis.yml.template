language: cpp
os: osx
osx_image: xcode9.2
branches:
  only:
  - mongocxx

before_install:
  - brew update && brew bundle

install:
  - git clone https://github.com/mongodb/mongo-cxx-driver.git
  - cd mongo-cxx-driver
  - git checkout ${VERSION}

before_script:
  - cat ../Doxyfile.patch >> Doxyfile

script:
  - cd build
  - cmake ..
  - make doxygen-current
  - cd docs/api/current
  - make

before_deploy:
  - wget http://mongocxx.org/img/favicon.png
  - convert favicon.png -resize 16x16! mongocxx.docset/icon.png
  - convert favicon.png -resize 32x32! mongocxx.docset/icon@2x.png
  - sed -i "" 's@<string>doxygen</string>@<string>mongocxx</string>@' mongocxx.docset/Contents/Info.plist
  - tar --exclude='.DS_Store' -cvzf mongocxx.tgz mongocxx.docset

deploy:
  provider: releases
  api_key:
    secure: 
  file:
    - "mongo-cxx-driver/build/docs/api/current/mongocxx.tgz"
    - "mongo-cxx-driver/build/docs/api/current/mongocxx.docset/icon.png"
    - "mongo-cxx-driver/build/docs/api/current/mongocxx.docset/icon@2x.png"
    - "docset.json"
    - "README.md"
    - "mongocxx.xml"
  skip_cleanup: true
  on:
    repo: Eremiell/doxydash
    branch: mongocxx
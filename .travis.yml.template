language: cpp
os: osx
osx_image: xcode9.2
branches:
  only:
  - WebSocket++

before_install:
  - brew update && brew bundle

install:
  - git clone https://github.com/zaphoyd/websocketpp.git
  - cd websocketpp
  - git checkout ${VERSION}

before_script:
  - cat ../Doxyfile.patch >> Doxyfile

script:
  - doxygen
  - cd doc/html
  - make

before_deploy:
  - wget https://avatars0.githubusercontent.com/u/1006976?s=400&v=4 -O icon.png
  - convert icon.png -resize 16x16! WebSocket++.docset/icon.png
  - convert icon.png -resize 32x32! WebSocket++.docset/icon@2x.png
  - sed -i "" 's@<string>doxygen</string>@<string>wspp</string>@' WebSocket++.docset/Contents/Info.plist
  - tar --exclude='.DS_Store' -cvzf WebSocket++.tgz WebSocket++.docset
  - cd ../../..

deploy:
  provider: releases
  api_key:
    secure: 
  file:
    - "websocketpp/doc/html/WebSocket++.tgz"
    - "websocketpp/doc/html/WebSocket++.docset/icon.png"
    - "websocketpp/doc/html/WebSocket++.docset/icon@2x.png"
    - "docset.json"
    - "README.md"
    - "WebSocket++.xml"
  skip_cleanup: true
  on:
    repo: Eremiell/doxydash
    branch: WebSocket++
language: cpp
os: osx
osx_image: xcode9.2
branches:
  only:
  - MySQL++

before_install:
  - brew update && brew bundle

install:
  - wget https://tangentsoft.com/mysqlpp/releases/mysql++-${VERSION}.tar.gz
  - tar xzf mysql++-${VERSION}.tar.gz
  - cd mysql++-${VERSION}

before_script:
  - cat ../Doxyfile.patch >> lib/Doxyfile
  - cat ../Doxyfile.patch >> ssx/Doxyfile

script:
  - cd lib
  - doxygen
  - cd ../ssx
  - doxygen
  - cd ../doc/html/refman
  - make

before_deploy:
  - wget https://imgur.com/download/DEieO8h -O icon.png
  - convert icon.png -resize 16x16! MySQL++.docset/icon.png
  - convert icon.png -resize 32x32! MySQL++.docset/icon@2x.png
  - sed -i "" 's@<string>doxygen</string>@<string>mysqlpp</string>@' MySQL++.docset/Contents/Info.plist
  - tar --exclude='.DS_Store' -cvzf MySQL++.tgz MySQL++.docset
  - cd ../../..

deploy:
  provider: releases
  api_key:
    secure: 
  file:
    - "mysql++-${VERSION}/doc/html/refman/MySQL++.tgz"
    - "mysql++-${VERSION}/doc/html/refman/MySQL++.docset/icon.png"
    - "mysql++-${VERSION}/doc/html/refman/MySQL++.docset/icon@2x.png"
    - "docset.json"
    - "README.md"
    - "MySQL++.xml"
  skip_cleanup: true
  on:
    repo: Eremiell/doxydash
    branch: MySQL++
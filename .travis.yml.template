language: cpp
os: osx
osx_image: xcode9.2
branches:
  only:
  - TinyXML2

before_install:
  - brew update && brew bundle

install:
  - git clone https://github.com/leethomason/tinyxml2.git
  - cd tinyxml2
  - git checkout ${VERSION}

before_script:
  - cat Doxyfile.patch >> dox

script:
  - doxygen dox
  - cd docs
  - make

before_deploy:
  - wget https://imgur.com/download/qQCWekJ -O icon.png
  - convert icon.png -resize 16x16! TinyXML2.docset/icon.png
  - convert icon.png -resize 32x32! TinyXML2.docset/icon@2x.png
  - sed -i "" 's@<string>doxygen</string>@<string>txml2</string>@' TinyXML2.docset/Contents/Info.plist
  - tar --exclude='.DS_Store' -cvzf TinyXML2.tgz TinyXML2.docset
  - cd ../..

deploy:
  provider: releases
  api_key:
    secure: 
  file:
    - "TinyXML2/build/doc/html/TinyXML2.tgz"
    - "TinyXML2/build/doc/html/TinyXML2.docset/icon.png"
    - "TinyXML2/build/doc/html/TinyXML2.docset/icon@2x.png"
    - "docset.json"
    - "README.md"
    - "TinyXML2.xml"
  skip_cleanup: true
  on:
    repo: Eremiell/doxydash
    branch: TinyXML2